rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - public read, authenticated user write
    match /images/{allPaths=**} {
      allow read: if true;
      // Allow any authenticated user to upload images
      // For production: restrict this to specific admin emails
      allow write: if request.auth != null;
    }
    
    // Products folder - public read, authenticated user write
    match /products/{allPaths=**} {
      allow read: if true;
      // Allow any authenticated user to upload product images
      allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}